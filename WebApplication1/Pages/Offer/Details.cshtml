@page
@model WebApplication1.Pages.Offer.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ListingOffer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ListingOffer.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ListingOffer.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ListingOffer.SellerID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ListingOffer.SellerID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ListingOffer.DeliveryCost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ListingOffer.DeliveryCost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ListingOffer.SellingMode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ListingOffer.SellingMode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ListingOffer.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ListingOffer.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ListingOffer.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ListingOffer.Stock)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ListingOffer.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ListingOffer.Category)
        </dd>
        <dt class="col-sm-2">
            Zdjęcia
        </dt>
        <dd class="col-sm-10">
            @{ var divName = "carousel";
                    var images = ViewData["Images"] as List<Model.OfferImages>;}
            <div id="@divName" class="carousel slide w-200px h-auto" data-ride="carousel">
                <div class="carousel-inner">
                    @for (int i = 0; i < images.Count; i++)
                    {
                        if (i == 0)
                        {
                            <div class="carousel-item active">
                                <img src="@images[i].Url" alt="Alternate Text" class="d-block w-100" />
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src="@images[i].Url" alt="Alternate Text" class="d-block w-100" />
                            </div>
                        }
                    }
                </div>
                <a class="carousel-control-prev" href="#@divName" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#@divName" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.ListingOffer.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
