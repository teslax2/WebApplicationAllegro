@page
@model WebApplication1.Pages.Offer.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form class="form-inline" id="formFilter">
    <div class="form-group mx-sm-3 mb-2">
        <input asp-for="FilterString" type="text" class="form-control" placeholder="Name">
    </div>
    <button type="submit" class="btn btn-primary mb-2" id="FilterButton">Filter</button>
</form>
<table class="table" id="mainTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListingOffer[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListingOffer[0].SellerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListingOffer[0].DeliveryCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListingOffer[0].SellingMode)
            </th>
            <th>
                @{ 
                if ((string)ViewData["Order"] == "desc")
                    {<a asp-page="/Offer/Index" asp-route-order="asc">@Html.DisplayNameFor(model => model.ListingOffer[0].Price)</a>}
                else
                    {<a asp-page="/Offer/Index" asp-route-order="desc">@Html.DisplayNameFor(model => model.ListingOffer[0].Price)</a>}
                }
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListingOffer[0].Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListingOffer[0].Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListingOffer)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SellerID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SellingMode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
